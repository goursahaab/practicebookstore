#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir//usr/bin/node" ]; then
  exec "$basedir//usr/bin/node"  "$basedir/../mongoosh/app.js" "$@"
else 
  exec /usr/bin/node  "$basedir/../mongoosh/app.js" "$@"
fi
